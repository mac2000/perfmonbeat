<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="perfmon" type="PerfmonBeat.Config.PerfmonConfiguration, PerfmonBeat"/>
	</configSections>
	<appSettings>
		<add key="Interval" value="5000"/>
		<add key="Elastic" value="http://localhost:9200"/>
	</appSettings>
	<perfmon>
		<counters>
			<counter category="Processor" counter="% Processor Time" instance="_Total" />
			<counter category="Processor" counter="% Idle Time" instance="_Total" />
			
			<counter category="SQLAgent:Jobs" counter="Active jobs" />
			<counter category="SQLAgent:Jobs" counter="Failed jobs" />
			<counter category="SQLAgent:Jobs" counter="Queued jobs" />

			<counter category="SQLAgent:JobSteps" counter="Active steps" instance="_Total" />
			<counter category="SQLAgent:JobSteps" counter="Queued steps" instance="_Total" />

			<counter category="SQLServer:Buffer Manager" counter="Buffer cache hit ratio" />
			<counter category="SQLServer:Buffer Manager" counter="Page life expectancy" />

			<counter category="SQLServer:Databases" counter="Active Transactions" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Data File(s) Size (KB)" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Log Cache Hit Ratio" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Log File(s) Size (KB)" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Log Growths" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Log Shrinks" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Log Truncations" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Percent Log Used" instance="_Total" />
			<counter category="SQLServer:Databases" counter="Transactions/sec" instance="_Total" />

			<counter category="SQLServer:General Statistics" counter="Active Temp Tables" />
			<counter category="SQLServer:General Statistics" counter="Processes blocked" />
			<counter category="SQLServer:General Statistics" counter="Transactions" />

			<counter category="SQLServer:Locks" counter="Lock Waits/sec" instance="_Total" />
			<counter category="SQLServer:Locks" counter="Number of Deadlocks/sec" instance="_Total" />

			<counter category="SQLServer:SQL Errors" counter="Errors/sec" instance="_Total" />
			
			<counter category="SQLServer:SQL Statistics" counter="Batch Requests/sec" />
			<counter category="SQLServer:SQL Statistics" counter="SQL Compilations/sec" />
			<counter category="SQLServer:SQL Statistics" counter="SQL Re-Compilations/sec" />
		</counters>
	</perfmon>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
	</startup>
</configuration>